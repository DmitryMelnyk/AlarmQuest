<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.dmelnyk.alarmquest.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bn_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        app:itemTextColor="@drawable/bn_item_color_state"
        app:itemIconTint="@drawable/bn_item_color_state"
        app:menu="@menu/navigation_items"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/bn_navigation"
        android:background="@color/lightBlue"
        />
</RelativeLayout>
