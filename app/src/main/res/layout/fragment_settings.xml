<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="settings"
            type="com.dmelnyk.alarmquest.ui.main.settings.model.AlarmSettings"/>
        <variable
            name="callback"
            type="com.dmelnyk.alarmquest.ui.main.settings.view.SettingsFragment.SettingsCallback"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_alarm_title"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                style="@style/SettingsItemSingle"
                android:onClick="@{() -> callback.onVolumeClicked()}"
                android:text="@string/settings_volume" />
            <include layout="@layout/separator" />

            <TextView
                style="@style/SettingsItemTop"
                android:onClick="@{() -> callback.onMelodyClicked()}"
                android:text="@string/settings_song" />
            <TextView
                style="@style/SettingsItemBottom"
                android:text="@{settings.soundTitle}"
                tools:text="Melody" />
            <include layout="@layout/separator" />

            <TextView
                style="@style/SettingsItemTop"
                android:onClick="@{() -> callback.onAutoTurningOffClicked()}"
                android:text="@string/settings_auto_off" />
            <TextView
                style="@style/SettingsItemBottom"
                android:text="@{@string/settings_minutes(settings.autoTurnOfTime)}"
                tools:text="5 min." />
            <include layout="@layout/separator" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/sw_vibro"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_vibro"
                    style="@style/SettingsItemSingle" />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sw_vibro"
                    android:onClick="@{() -> callback.onVibroSwitched()}"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{settings.vibroEnable}"
                    />
            </RelativeLayout>
            <include layout="@layout/separator" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/tv_reduce_sound"
                    style="@style/SettingsItemTop"
                    android:onClick="@{() -> callback.onSoundReduceClicked()}"
                    android:layout_marginEnd="16dp"
                    android:text="@string/settings_reduce_sound"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/switch_reduce_sound" />

                <TextView
                    style="@style/SettingsItemBottom"
                    android:text="@{settings.reduceSoundLevel + `%`}"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_reduce_sound"
                    tools:text="50%" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_reduce_sound"
                    android:onClick="@{() -> callback.onSoundReduceChecked()}"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{settings.reduceSoundEnable}"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <include layout="@layout/separator" />

            <TextView
                android:text="@string/settings_questions_count"
                style="@style/SettingsItemSingle"
                android:onClick="@{() -> callback.onQuestNumberClicked()}"
                />
            <include layout="@layout/separator" />
        </LinearLayout>
    </ScrollView>
</layout>